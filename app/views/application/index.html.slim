  div id="item-1" class="control-operator"
  div id="item-2" class="control-operator"
  div id="item-3" class="control-operator"

  figure class="item"
    h1
      | First

  figure class="item"
    h1
      | Second

  figure class="item"
    h1
      | Third

  div class="controls"
    a href="#item-1" class="control-button"
      | •
